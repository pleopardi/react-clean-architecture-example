{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "paths": {
      "components/*": [
        "presentation/components/*"
      ],
      "errors/*": [
        "errors/*"
      ],
      "features/*": [
        "features/*"
      ],
      "layouts/*": [
        "presentation/layouts/*"
      ],
      "modules/*": [
        "modules/*"
      ],
      "pages/*": [
        "presentation/pages/*"
      ],
      "utilities/*": [
        "utilities/*"
      ],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": [
    "src"
  ]
}
